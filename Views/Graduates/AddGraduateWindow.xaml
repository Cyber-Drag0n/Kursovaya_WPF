<Window x:Class="TRIZBD_Lab4.Views.Graduates.AddGraduateWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TRIZBD_Lab4.Views.Graduates"
        mc:Ignorable="d"
        Title="Add Graduate" Height="250" Width="350" WindowStartupLocation="CenterScreen">
    <Grid Margin="10">
        <StackPanel>
            <Label>user_id</Label>
            <ComboBox x:Name="UserCombo" DisplayMemberPath="user_id" SelectedValuePath="user_id"/>
            <Label>department_id</Label>
            <ComboBox x:Name="DeptCombo" DisplayMemberPath="department_id" SelectedValuePath="department_id"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,10">
            <Button Content="Сохранить"   Width="100" Margin="5" Click="Save_Click"/>
            <Button Content="Отменить" Width="100" Margin="5" Click="Cancel_Click"/>
        </StackPanel>
    </Grid>
</Window>
