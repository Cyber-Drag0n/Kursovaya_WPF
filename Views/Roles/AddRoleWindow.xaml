<Window x:Class="TRIZBD_Lab4.Views.Roles.AddRoleWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TRIZBD_Lab4.Views.Roles"
        mc:Ignorable="d"
        Title="Add Role" Height="200" Width="300" WindowStartupLocation="CenterScreen">
    <Grid Margin="10">
        <StackPanel>
            <Label>role_name</Label>
            <TextBox Text="{Binding role_name}"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,10">
            <Button Content="Сохранить"   Width="100" Margin="5" Click="Save_Click"/>
            <Button Content="Отменить" Width="100" Margin="5" Click="Cancel_Click"/>
        </StackPanel>
    </Grid>
</Window>
